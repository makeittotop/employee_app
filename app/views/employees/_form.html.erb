<%= form_for @employee, html: {multipart: true} do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth %><br>
    <%= f.date_select :date_of_birth, prompt: { day: 'Select day', month: 'Select Month', year: 'Select Year' }  %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.radio_button :gender, "male" %>
    <%= f.label :gender, "M", value: "m" %>
    <%= f.radio_button :gender, "female" %>
    <%= f.label :gender, "F", value: "f" %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.country_select :country, {priority: %w(US CA AE IN PK), prompt: 'Please select a country'}%>
  </div>
  <div class="field">
    <%= f.label :personal_email %><br>
    <%= f.text_field :personal_email %>
  </div>
  <div class="field">
    <%= f.label :contact_number %><br>
    <%= f.text_field :contact_number %>
  </div>
  <div class="field">
    <%= f.label :code %><br>
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :department %><br>
    <%= f.select :department, get_employee_departments %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, get_employee_status %>
  </div>
  <div class="field">
    <%= f.label :hire %><br>
    <%= f.date_select :hire, prompt: { day: 'Select day', month: 'Select Month', year: 'Select Year' } %> 
  </div>
  <div class="field" id="end_date">
    <%= f.label :end_hire %><br>
    <%= f.date_select :end_hire, disabled: true, prompt: { day: 'Select day', month: 'Select Month', year: 'Select Year' } %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= javascript_tag do %>
  $("#employee_status").on('change', function() {
      if($(this).val() == 'Inactive') {
          $("#employee_end_date_1i")[0].disabled=false;
          $("#employee_end_date_2i")[0].disabled=false;
          $("#employee_end_date_3i")[0].disabled=false;
      }
      else {
          $("#employee_end_date_1i")[0].disabled=true;
          $("#employee_end_date_2i")[0].disabled=true;
          $("#employee_end_date_3i")[0].disabled=true;
      }
  });
<% end %>

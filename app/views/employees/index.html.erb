<div class="row">
  <%= render 'layouts/sidebar' %>

  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-1 main">

    <!-- flash message --> 
    <%= render 'layouts/flash' %>
    
    <% if session[:admin] %>
      <div class="new-employee">
        <%= link_to 'Create a new employee', new_employee_path, class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="row">
      <div class="bs-example">
        <% @employees.each do |employee| %>
          <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
              <img data-src="holder.js/250x300" alt="Generic placeholder thumbnail">
              <div class="caption caption2">
                 <table class="employee-details">
                   <tbody class="employee-tbody">
                     <tr>
                       <td>
                          <strong><%= "#{employee.first_name} #{employee.last_name}".titleize %></strong>
                       </td>
                       <td>
                         <strong><%= employee.department %></strong>
                       </td>
                     </tr>
                     <tr>
                       <td>
                         <strong><%= employee.personal_email %></strong>
                       </td>
                       <td>
                         <strong><%= employee.contact_number %></strong>
                       </td>
                     </tr>
                   </tbody>
                 </table>
              </div>
              <div class="show-edit">
                <% unless session[:employee_id].blank? %>
                  <% if session[:admin] || session[:employee_id] == employee.id %>
                    <%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-default btn-primary" %>
                  <% end %>
                <% end %>
                  <%= link_to 'Show', employee_path(employee.id), class: "btn btn-default btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div><!-- /.bs-example -->
    </div>
  </div>

</div>

